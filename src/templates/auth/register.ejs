<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../shared/head.ejs', { title: 'Регистрация' }) %>
        <link rel="stylesheet" href="/public/tw.css" />
    </head>

    <body>
        <div class="flex flex-col items-center max-w-5xl mx-auto pt-12">
            <div class="w-[500px]">
                <form method="POST" action="/register" class="p-4 border border-gray-500">
                    <h1 class="text-xl">Регистрация</h1>

                    <div class="flex flex-col mt-3">
                        <label class="text-sm" for="email">Почта</label>
                        <input value="<%= email %>" required autofocus type="email" class="py-1 px-2 border border-gray-500" id="email" name="email" />
                    </div>

                    <div class="flex flex-col mt-2">
                        <label class="text-sm" for="password">Пароль</label>
                        <input value="<%= password %>" required class="py-1 px-2 border border-gray-500" type="password" id="password" name="password" />
                    </div>

                    <div class="mt-3">
                        <button class="border border-gray-500 p-1" type="submit">Отправить</button>
                    </div>
                </form>

                <div class="mt-3">
                    <% for (var i = 0; i < errors.length; i++) { %>
                        <p class="text-xs text-red-500"><%= errors[i] %></p>
                    <% } %>
                </div>   
            </div>
        </div>
    </body>
</html>